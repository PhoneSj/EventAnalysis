            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="one"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="one"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="one"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>